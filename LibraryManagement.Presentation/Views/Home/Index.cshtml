@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" >
   @for(var i=0; i < Model.Books.Count(); i++){
    if(i ==0){
       <div class="carousel-item active">
      <img  class="d-block w-100" style = "width:640px;height:360px;  display: block; margin-left: auto; margin-right: auto;" src="@Model.Books[i].ImageUrl" alt="First slide">
       </div>
    }else{
    <div class="carousel-item">
      <img class="d-block w-100" style = "width:640px;height:360px;  display: block; margin-left: auto; margin-right: auto;" src="@Model.Books[i].ImageUrl" alt="Second slide">
    </div>
    }
   }
  </div>
   <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<hr>
<h3> Categories </h3>
<hr>

<div class="container">
  <div class="row">
@foreach (var category in Model.Categories)
{
<div class="col">
<div class="card" style="width: 18rem;">
  <div class="card-body">
  <a asp-controller="Book" asp-action="GetBookByCategory" asp-route-id="@category.Id"> <h5 class="card-title">@category.categoryName </h5> </a>
  </div>
</div>
</div>
}
</div>
</div>

<hr>
<h3> Latest Books</h3>
<hr>


<div class="container">
  <div class="row">
@foreach(var book in Model.HomeBooks){
     <div class="col">
<div class="card" style="width: 18rem;">
  <div class="card-header">
    <img alt="image" src="@Url.Content(book.ImageUrl)" width="250" height="250" />
  </div>
  <div class="card-body">
  <a asp-controller="Book" asp-action="Detail" asp-route-id="@book.Id"> <h5 class="card-title"> @book.Title </h5> </a>
  </div>
</div>
</div>
}
</div>
</div>
