@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner" style=" color: grey; background-color: grey;">
   @for(var i=0; i < Model.Books.Count(); i++){
    if(i ==0){
       <div class="carousel-item active">
      <img  style = "width:640px;height:360px;  display: block; margin-left: auto; margin-right: auto;" src="@Model.Books[i].ImageUrl" alt="First slide">
       </div>
    }else{
    <div class="carousel-item">
      <img  style = "width:640px;height:360px;  display: block; margin-left: auto; margin-right: auto;" src="@Model.Books[i].ImageUrl" alt="Second slide">
    </div>
    }
   }
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" style="color:red" aria-hidden="false"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>